# ===================================
# IMPORTANT: NEVER COMMIT THE ACTUAL .env FILE
# This is only an example template
# Copy to .env and fill in real values
# ===================================

# Server Configuration
PORT=5000
NODE_ENV=development

# Database
# CRITICAL: Use authentication in production
# Format: mongodb://username:password@host:port/database?authSource=admin
MONGODB_URI=mongodb://localhost:27017/financial-tracker

# JWT Configuration
# CRITICAL: Generate a strong random secret (min 32 characters)
# Generate with: openssl rand -base64 32
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# Encryption
# CRITICAL: Generate a 32-character encryption key
# Generate with: openssl rand -hex 32
ENCRYPTION_KEY=your-32-character-encryption-key-here

# CORS
# CRITICAL: In production, set to your exact frontend domain (no wildcards)
CORS_ORIGIN=http://localhost:5173

# Rate Limiting
# Adjust based on expected traffic
RATE_LIMIT_WINDOW_MS=900000        # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100        # Max requests per IP

# History & Audit Configuration
HISTORY_RETENTION_DAYS=365         # Keep history for 1 year
ENABLE_ANOMALY_DETECTION=true      # Enable security monitoring

# Security Settings
ENABLE_SECURITY_LOGGING=true       # Log suspicious activities
SUSPICIOUS_ACTIVITY_THRESHOLD=5    # Failed logins before alert

# Monitoring & Error Tracking (Optional)
# SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
# LOGROCKET_APP_ID=your-logrocket-app-id

# Email Alerts (Optional)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_SECURE=true
# SMTP_USER=your-email@gmail.com
# SMTP_PASSWORD=your-app-specific-password
# ALERT_EMAIL=security-alerts@yourapp.com

# Plaid Integration (Optional)
# Get from: https://dashboard.plaid.com/
# PLAID_CLIENT_ID=your-plaid-client-id
# PLAID_SECRET=your-plaid-secret
# PLAID_ENV=sandbox
